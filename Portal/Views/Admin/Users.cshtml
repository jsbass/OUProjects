@model List<Portal.Models.DB.User>

@{
    ViewBag.Title = "Admin - Users";
}

<h2>Users</h2>

<table class="table">
    <thead>
    <tr>
        <th>Name</th><th>Email</th><th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.LastName, @user.FirstName</td><td><a href="mailto:@user.Email">@user.Email</a></td><td>@Html.ActionLink("Edit","Edit","Account", new { userId = user.UserId}, null) | Delete</td>
        </tr>
    }
    </tbody>
</table>
